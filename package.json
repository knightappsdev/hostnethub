{
  "name": "app",
  "private": true,
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap=inline --format=esm --outdir=app/assets/builds --public-path=/assets",
    "watch:js": "esbuild app/javascript/*.* --bundle --sourcemap=inline --format=esm --outdir=app/assets/builds --public-path=/assets --watch",
    "build:css": "run-p build:css:*",
    "build:css:app": "postcss ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css",
    "build:css:admin": "postcss ./app/assets/stylesheets/admin.css -o ./app/assets/builds/admin.css",
    "watch:css": "run-p watch:css:*",
    "watch:css:app": "postcss ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --map --watch",
    "watch:css:admin": "postcss ./app/assets/stylesheets/admin.css -o ./app/assets/builds/admin.css --map --watch"
  },
  "dependencies": {
    "@rails/actioncable": "^8.0.201",
    "@rails/activestorage": "^8.0.200",
    "@rails/ujs": "^7.1.3-4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.14.9",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "browserslist": [
    "defaults"
  ]
}
