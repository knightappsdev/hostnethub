<%# Link showing page number with Tailwind styling
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="px-3 py-2 bg-blue-600 text-white rounded" aria-label="Current page, Page <%= page %>"><%= page %></span>
<% else %>
  <%= link_to page, url, {
    remote: remote,
    rel: page.rel,
    class: "px-3 py-2 text-gray-700 hover:bg-gray-100 rounded transition-colors",
    "aria-label": "Page #{page}"
  } %>
<% end %>
