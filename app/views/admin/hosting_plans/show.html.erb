<% content_for :title, @hosting_plan.respond_to?(:name) ? @hosting_plan.name : "Hosting plan" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_hosting_plans_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Hosting plans
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @hosting_plan.respond_to?(:name) ? @hosting_plan.name : "Hosting plan ##{@hosting_plan.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_hosting_plan_path(@hosting_plan.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_hosting_plan_path(@hosting_plan.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this hosting_plan?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Hosting plan Content -->
  <div class="card">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @hosting_plan.name %></div>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@hosting_plan.description) %>
          </div>
        </div>

        <!-- Price monthly -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price monthly</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @hosting_plan.price_monthly %></div>
        </div>

        <!-- Websites limit -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Websites limit</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @hosting_plan.websites_limit %></div>
        </div>

        <!-- Storage gb -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Storage gb</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @hosting_plan.storage_gb %></div>
        </div>

        <!-- Bandwidth gb -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Bandwidth gb</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @hosting_plan.bandwidth_gb %></div>
        </div>

        <!-- Email marketing -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email marketing</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @hosting_plan.email_marketing ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @hosting_plan.email_marketing ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Seo tools -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Seo tools</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @hosting_plan.seo_tools ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @hosting_plan.seo_tools ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Social scheduler -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Social scheduler</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @hosting_plan.social_scheduler ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @hosting_plan.social_scheduler ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Migration support -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Migration support</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @hosting_plan.migration_support ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @hosting_plan.migration_support ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Featured -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Featured</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @hosting_plan.featured ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @hosting_plan.featured ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Active -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Active</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @hosting_plan.active ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @hosting_plan.active ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @hosting_plan.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @hosting_plan.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@hosting_plan.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @hosting_plan.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@hosting_plan.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
