<% content_for :title, "Edit Contact" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_contact_path(@contact.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Contact
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Contact</h1>
  </div>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @contact], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/error_messages', model: @contact %>

        <!-- First name -->
        <div class="mb-4">
          <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            First name<% if field_required?(@contact, :first_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :first_name, {
            placeholder: "Enter first name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :first_name) ? { required: true } : {}) %>
          <% if @contact.errors[:first_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:first_name].first %></p>
          <% end %>
        </div>

        <!-- Last name -->
        <div class="mb-4">
          <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Last name<% if field_required?(@contact, :last_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :last_name, {
            placeholder: "Enter last name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :last_name) ? { required: true } : {}) %>
          <% if @contact.errors[:last_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:last_name].first %></p>
          <% end %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Email<% if field_required?(@contact, :email) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :email, {
            placeholder: "Enter email...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :email) ? { required: true } : {}) %>
          <% if @contact.errors[:email].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:email].first %></p>
          <% end %>
        </div>

        <!-- Phone -->
        <div class="mb-4">
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Phone<% if field_required?(@contact, :phone) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :phone, {
            placeholder: "Enter phone...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :phone) ? { required: true } : {}) %>
          <% if @contact.errors[:phone].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:phone].first %></p>
          <% end %>
        </div>

        <!-- Company -->
        <div class="mb-4">
          <%= form.label :company, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Company<% if field_required?(@contact, :company) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :company, {
            placeholder: "Enter company...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :company) ? { required: true } : {}) %>
          <% if @contact.errors[:company].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:company].first %></p>
          <% end %>
        </div>

        <!-- Job title -->
        <div class="mb-4">
          <%= form.label :job_title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Job title<% if field_required?(@contact, :job_title) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :job_title, {
            placeholder: "Enter job title...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :job_title) ? { required: true } : {}) %>
          <% if @contact.errors[:job_title].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:job_title].first %></p>
          <% end %>
        </div>

        <!-- Lifecycle stage -->
        <div class="mb-4">
          <%= form.label :lifecycle_stage, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Lifecycle stage<% if field_required?(@contact, :lifecycle_stage) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :lifecycle_stage, {
            placeholder: "Enter lifecycle stage...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :lifecycle_stage) ? { required: true } : {}) %>
          <% if @contact.errors[:lifecycle_stage].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:lifecycle_stage].first %></p>
          <% end %>
        </div>

        <!-- Contact score -->
        <div class="mb-4">
          <%= form.label :contact_score, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Contact score<% if field_required?(@contact, :contact_score) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :contact_score, {
            placeholder: "Enter contact score...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :contact_score) ? { required: true } : {}) %>
          <% if @contact.errors[:contact_score].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:contact_score].first %></p>
          <% end %>
        </div>

        <!-- Notes -->
        <div class="mb-4">
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Notes<% if field_required?(@contact, :notes) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :notes, {
            rows: 5,
            placeholder: "Enter notes...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@contact, :notes) ? { required: true } : {}) %>
          <% if @contact.errors[:notes].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:notes].first %></p>
          <% end %>
        </div>

        <!-- User -->
        <div class="mb-4">
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            User<% if field_required?(@contact, :user) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :user_id, 
              options_for_select([['Select User', '']] + User.all.map { |item| [item.name, item.id] }, @contact.user_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @contact.errors[:user_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:user_id].first %></p>
          <% end %>
        </div>

        <!-- Lead -->
        <div class="mb-4">
          <%= form.label :lead_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Lead<% if field_required?(@contact, :lead) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :lead_id, 
              options_for_select([['Select Lead', '']] + Lead.all.map { |item| [item.id, item.id] }, @contact.lead_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @contact.errors[:lead_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @contact.errors[:lead_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_contact_path(@contact.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Contact", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>