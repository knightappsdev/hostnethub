<% content_for :title, "New Activity" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_activities_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Activities
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mt-4 mb-8">Create New Activity</h1>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @activity], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/error_messages', model: @activity %>

        <!-- Activity type -->
        <div class="mb-4">
          <%= form.label :activity_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Activity type<% if field_required?(@activity, :activity_type) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :activity_type, {
            placeholder: "Enter activity type...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :activity_type) ? { required: true } : {}) %>
          <% if @activity.errors[:activity_type].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:activity_type].first %></p>
          <% end %>
        </div>

        <!-- Title -->
        <div class="mb-4">
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Title<% if field_required?(@activity, :title) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :title, {
            placeholder: "Enter title...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :title) ? { required: true } : {}) %>
          <% if @activity.errors[:title].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:title].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@activity, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :description) ? { required: true } : {}) %>
          <% if @activity.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Activity date -->
        <div class="mb-4">
          <%= form.label :activity_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Activity date<% if field_required?(@activity, :activity_date) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.datetime_local_field :activity_date, {
            placeholder: "Enter activity date...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :activity_date) ? { required: true } : {}) %>
          <% if @activity.errors[:activity_date].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:activity_date].first %></p>
          <% end %>
        </div>

        <!-- Contact -->
        <div class="mb-4">
          <%= form.label :contact_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Contact<% if field_required?(@activity, :contact) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :contact_id, 
              options_for_select([['Select Contact', '']] + Contact.all.map { |item| [item.id, item.id] }, @activity.contact_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @activity.errors[:contact_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:contact_id].first %></p>
          <% end %>
        </div>

        <!-- Lead -->
        <div class="mb-4">
          <%= form.label :lead_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Lead<% if field_required?(@activity, :lead) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :lead_id, 
              options_for_select([['Select Lead', '']] + Lead.all.map { |item| [item.id, item.id] }, @activity.lead_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @activity.errors[:lead_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:lead_id].first %></p>
          <% end %>
        </div>

        <!-- Deal -->
        <div class="mb-4">
          <%= form.label :deal_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Deal<% if field_required?(@activity, :deal) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :deal_id, 
              options_for_select([['Select Deal', '']] + Deal.all.map { |item| [item.name, item.id] }, @activity.deal_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @activity.errors[:deal_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:deal_id].first %></p>
          <% end %>
        </div>

        <!-- User -->
        <div class="mb-4">
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            User<% if field_required?(@activity, :user) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :user_id, 
              options_for_select([['Select User', '']] + User.all.map { |item| [item.name, item.id] }, @activity.user_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @activity.errors[:user_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:user_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_activities_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Activity", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>