<% content_for :title, "New Lead" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_leads_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Leads
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mt-4 mb-8">Create New Lead</h1>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @lead], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/error_messages', model: @lead %>

        <!-- First name -->
        <div class="mb-4">
          <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            First name<% if field_required?(@lead, :first_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :first_name, {
            placeholder: "Enter first name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :first_name) ? { required: true } : {}) %>
          <% if @lead.errors[:first_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:first_name].first %></p>
          <% end %>
        </div>

        <!-- Last name -->
        <div class="mb-4">
          <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Last name<% if field_required?(@lead, :last_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :last_name, {
            placeholder: "Enter last name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :last_name) ? { required: true } : {}) %>
          <% if @lead.errors[:last_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:last_name].first %></p>
          <% end %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Email<% if field_required?(@lead, :email) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :email, {
            placeholder: "Enter email...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :email) ? { required: true } : {}) %>
          <% if @lead.errors[:email].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:email].first %></p>
          <% end %>
        </div>

        <!-- Phone -->
        <div class="mb-4">
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Phone<% if field_required?(@lead, :phone) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :phone, {
            placeholder: "Enter phone...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :phone) ? { required: true } : {}) %>
          <% if @lead.errors[:phone].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:phone].first %></p>
          <% end %>
        </div>

        <!-- Company -->
        <div class="mb-4">
          <%= form.label :company, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Company<% if field_required?(@lead, :company) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :company, {
            placeholder: "Enter company...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :company) ? { required: true } : {}) %>
          <% if @lead.errors[:company].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:company].first %></p>
          <% end %>
        </div>

        <!-- Website -->
        <div class="mb-4">
          <%= form.label :website, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Website<% if field_required?(@lead, :website) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :website, {
            placeholder: "Enter website...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :website) ? { required: true } : {}) %>
          <% if @lead.errors[:website].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:website].first %></p>
          <% end %>
        </div>

        <!-- Source -->
        <div class="mb-4">
          <%= form.label :source, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Source<% if field_required?(@lead, :source) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :source, {
            placeholder: "Enter source...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :source) ? { required: true } : {}) %>
          <% if @lead.errors[:source].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:source].first %></p>
          <% end %>
        </div>

        <!-- Status -->
        <div class="mb-4">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Status<% if field_required?(@lead, :status) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :status, {
            placeholder: "Enter status...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :status) ? { required: true } : {}) %>
          <% if @lead.errors[:status].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:status].first %></p>
          <% end %>
        </div>

        <!-- Lifecycle stage -->
        <div class="mb-4">
          <%= form.label :lifecycle_stage, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Lifecycle stage<% if field_required?(@lead, :lifecycle_stage) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :lifecycle_stage, {
            placeholder: "Enter lifecycle stage...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :lifecycle_stage) ? { required: true } : {}) %>
          <% if @lead.errors[:lifecycle_stage].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:lifecycle_stage].first %></p>
          <% end %>
        </div>

        <!-- Lead score -->
        <div class="mb-4">
          <%= form.label :lead_score, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Lead score<% if field_required?(@lead, :lead_score) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :lead_score, {
            placeholder: "Enter lead score...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :lead_score) ? { required: true } : {}) %>
          <% if @lead.errors[:lead_score].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:lead_score].first %></p>
          <% end %>
        </div>

        <!-- Notes -->
        <div class="mb-4">
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Notes<% if field_required?(@lead, :notes) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :notes, {
            rows: 5,
            placeholder: "Enter notes...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@lead, :notes) ? { required: true } : {}) %>
          <% if @lead.errors[:notes].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:notes].first %></p>
          <% end %>
        </div>

        <!-- Assigned to -->
        <div class="mb-4">
          <%= form.label :assigned_to_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Assigned to<% if field_required?(@lead, :assigned_to) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :assigned_to_id, 
              options_for_select([['Select Assigned to', '']] + User.all.map { |item| [item.name, item.id] }, @lead.assigned_to_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @lead.errors[:assigned_to_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:assigned_to_id].first %></p>
          <% end %>
        </div>

        <!-- User -->
        <div class="mb-4">
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            User<% if field_required?(@lead, :user) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :user_id, 
              options_for_select([['Select User', '']] + User.all.map { |item| [item.name, item.id] }, @lead.user_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @lead.errors[:user_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @lead.errors[:user_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_leads_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Lead", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>