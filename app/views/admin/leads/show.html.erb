<% content_for :title, @lead.respond_to?(:name) ? @lead.name : "Lead" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_leads_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Leads
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @lead.respond_to?(:name) ? @lead.name : "Lead ##{@lead.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_lead_path(@lead.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_lead_path(@lead.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this lead?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Lead Content -->
  <div class="card">
    <div class="card-body">
      <div class="space-y-6">
        <!-- First name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">First name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.first_name %></div>
        </div>

        <!-- Last name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.last_name %></div>
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.email %></div>
        </div>

        <!-- Phone -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Phone</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.phone %></div>
        </div>

        <!-- Company -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Company</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.company %></div>
        </div>

        <!-- Website -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Website</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.website %></div>
        </div>

        <!-- Source -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Source</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.source %></div>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.status %></div>
        </div>

        <!-- Lifecycle stage -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Lifecycle stage</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.lifecycle_stage %></div>
        </div>

        <!-- Lead score -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Lead score</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.lead_score %></div>
        </div>

        <!-- Notes -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Notes</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@lead.notes) %>
          </div>
        </div>

        <!-- Assigned to -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Assigned to</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.assigned_to&.name %></div>
        </div>

        <!-- User -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">User</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @lead.user&.name %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @lead.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @lead.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@lead.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @lead.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@lead.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
