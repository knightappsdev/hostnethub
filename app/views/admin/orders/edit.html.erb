<% content_for :title, "Edit Order" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_order_path(@order.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Order
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Order</h1>
  </div>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @order], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/error_messages', model: @order %>

        <!-- Customer name -->
        <div class="mb-4">
          <%= form.label :customer_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Customer name<% if field_required?(@order, :customer_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :customer_name, {
            placeholder: "Enter customer name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :customer_name) ? { required: true } : {}) %>
          <% if @order.errors[:customer_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:customer_name].first %></p>
          <% end %>
        </div>

        <!-- Customer email -->
        <div class="mb-4">
          <%= form.label :customer_email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Customer email<% if field_required?(@order, :customer_email) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :customer_email, {
            placeholder: "Enter customer email...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :customer_email) ? { required: true } : {}) %>
          <% if @order.errors[:customer_email].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:customer_email].first %></p>
          <% end %>
        </div>

        <!-- Product name -->
        <div class="mb-4">
          <%= form.label :product_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Product name<% if field_required?(@order, :product_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :product_name, {
            placeholder: "Enter product name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :product_name) ? { required: true } : {}) %>
          <% if @order.errors[:product_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:product_name].first %></p>
          <% end %>
        </div>

        <!-- Amount -->
        <div class="mb-4">
          <%= form.label :amount, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Amount<% if field_required?(@order, :amount) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :amount, {
            placeholder: "Enter amount...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :amount) ? { required: true } : {}) %>
          <% if @order.errors[:amount].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:amount].first %></p>
          <% end %>
        </div>

        <!-- Currency -->
        <div class="mb-4">
          <%= form.label :currency, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Currency<% if field_required?(@order, :currency) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :currency, {
            placeholder: "Enter currency...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :currency) ? { required: true } : {}) %>
          <% if @order.errors[:currency].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:currency].first %></p>
          <% end %>
        </div>

        <!-- Status -->
        <div class="mb-4">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Status<% if field_required?(@order, :status) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :status, {
            placeholder: "Enter status...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :status) ? { required: true } : {}) %>
          <% if @order.errors[:status].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:status].first %></p>
          <% end %>
        </div>

        <!-- Stripe payment intent -->
        <div class="mb-4">
          <%= form.label :stripe_payment_intent_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Stripe payment intent<% if field_required?(@order, :stripe_payment_intent_id) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :stripe_payment_intent_id, {
            placeholder: "Enter stripe payment intent...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@order, :stripe_payment_intent_id) ? { required: true } : {}) %>
          <% if @order.errors[:stripe_payment_intent_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:stripe_payment_intent_id].first %></p>
          <% end %>
        </div>

        <!-- User -->
        <div class="mb-4">
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            User<% if field_required?(@order, :user) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :user_id, 
              options_for_select([['Select User', '']] + User.all.map { |item| [item.name, item.id] }, @order.user_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <% if @order.errors[:user_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @order.errors[:user_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_order_path(@order.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Order", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>