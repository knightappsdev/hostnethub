<!-- Navigation Bar -->
<nav class="bg-white shadow-sm border-b border-border sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <svg class="h-8 w-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
          </svg>
          <span class="text-xl font-bold text-primary">HostPlus</span>
          <span class="text-xs bg-free text-white px-2 py-1 rounded-full font-bold">FREE Tools</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to root_path, class: "text-text hover:text-accent font-medium transition-colors" do %>
          Home
        <% end %>
        <%= link_to hosting_plans_path, class: "text-text hover:text-accent font-medium transition-colors" do %>
          Hosting Plans
        <% end %>
        
        <% if user_signed_in? %>
          <%= link_to dashboards_path, class: "text-text hover:text-accent font-medium transition-colors" do %>
            Dashboard
          <% end %>
          <%= link_to orders_path, class: "text-text hover:text-accent font-medium transition-colors" do %>
            My Orders
          <% end %>
        <% end %>
      </div>

      <!-- Authentication Links -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- User Menu Dropdown -->
          <div class="relative" x-data="{ open: false }">
            <button @click="open = !open" class="flex items-center space-x-2 text-text hover:text-accent transition-colors">
              <div class="w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center">
                <span class="text-accent font-medium text-sm">
                  <%= Current.user.name&.first&.upcase || Current.user.email.first.upcase %>
                </span>
              </div>
              <span class="hidden md:block font-medium">
                <%= Current.user.name || Current.user.email.split('@').first.humanize %>
              </span>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <div x-show="open" @click.away="open = false" x-transition class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-border py-2 z-50">
              <%= link_to dashboards_path, class: "block px-4 py-2 text-sm text-text hover:bg-surface hover:text-accent transition-colors" do %>
                <svg class="inline h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                </svg>
                Dashboard
              <% end %>
              <%= link_to orders_path, class: "block px-4 py-2 text-sm text-text hover:bg-surface hover:text-accent transition-colors" do %>
                <svg class="inline h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                My Orders
              <% end %>
              <%= link_to profile_path, class: "block px-4 py-2 text-sm text-text hover:bg-surface hover:text-accent transition-colors" do %>
                <svg class="inline h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Profile
              <% end %>
              <hr class="my-2 border-border">
              <%= link_to session_path, method: :delete, class: "block px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                <svg class="inline h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                Sign Out
              <% end %>
            </div>
          </div>
        <% else %>
          <%= link_to new_session_path, class: "text-text hover:text-accent font-medium transition-colors" do %>
            Sign In
          <% end %>
          <%= link_to new_registration_path, class: "btn btn-accent" do %>
            Get Started FREE
          <% end %>
        <% end %>

        <!-- Mobile Menu Toggle -->
        <div class="md:hidden">
          <button type="button" class="text-text hover:text-accent" x-data="{ open: false }" @click="open = !open">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Mobile Navigation Menu -->
<div class="md:hidden bg-white border-b border-border" x-data="{ open: false }" x-show="open" x-transition>
  <div class="px-4 pt-4 pb-6 space-y-4">
    <%= link_to root_path, class: "block text-text hover:text-accent font-medium transition-colors" do %>
      Home
    <% end %>
    <%= link_to hosting_plans_path, class: "block text-text hover:text-accent font-medium transition-colors" do %>
      Hosting Plans
    <% end %>
    
    <% if user_signed_in? %>
      <%= link_to dashboards_path, class: "block text-text hover:text-accent font-medium transition-colors" do %>
        Dashboard
      <% end %>
      <%= link_to orders_path, class: "block text-text hover:text-accent font-medium transition-colors" do %>
        My Orders
      <% end %>
      <%= link_to profile_path, class: "block text-text hover:text-accent font-medium transition-colors" do %>
        Profile
      <% end %>
      <hr class="border-border">
      <%= link_to session_path, method: :delete, class: "block text-red-600 hover:text-red-700 font-medium transition-colors" do %>
        Sign Out
      <% end %>
    <% else %>
      <hr class="border-border">
      <%= link_to new_session_path, class: "block text-text hover:text-accent font-medium transition-colors" do %>
        Sign In
      <% end %>
      <%= link_to new_registration_path, class: "block text-accent hover:text-accent-dark font-medium transition-colors" do %>
        Get Started FREE
      <% end %>
    <% end %>
  </div>
</div>

<!-- Alpine.js for interactive elements -->
<script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>