<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="flex items-center mb-6">
    <%= link_to crm_contact_path(@contact), class: "text-text-secondary hover:text-primary mr-4" do %>
      <i class="icon-arrow-left text-lg"></i>
    <% end %>
    <div>
      <h1 class="text-3xl font-bold text-heading">Edit Contact</h1>
      <p class="text-text-secondary mt-1">Update contact information for <%= @contact.display_name %></p>
    </div>
  </div>

  <div class="card p-6">
    <%= render 'shared/error_messages', model: @contact %>
    
    <%= form_with model: [:crm, @contact], local: true, class: "space-y-6" do |form| %>
      <!-- Basic Information -->
      <div>
        <h3 class="text-lg font-semibold text-heading mb-4">Basic Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :first_name, "First Name *", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.text_field :first_name, class: "input-field", required: true %>
          </div>
          
          <div>
            <%= form.label :last_name, "Last Name *", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.text_field :last_name, class: "input-field", required: true %>
          </div>
          
          <div>
            <%= form.label :email, "Email Address *", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.email_field :email, class: "input-field", required: true %>
          </div>
          
          <div>
            <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.telephone_field :phone, class: "input-field" %>
          </div>
        </div>
      </div>

      <!-- Company Information -->
      <div>
        <h3 class="text-lg font-semibold text-heading mb-4">Company Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :company, "Company", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.text_field :company, class: "input-field" %>
          </div>
          
          <div>
            <%= form.label :job_title, "Job Title", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.text_field :job_title, class: "input-field" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :website, "Website", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.url_field :website, class: "input-field", placeholder: "https://example.com" %>
          </div>
        </div>
      </div>

      <!-- Contact Management -->
      <div>
        <h3 class="text-lg font-semibold text-heading mb-4">Contact Management</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :lifecycle_stage, "Lifecycle Stage", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.select :lifecycle_stage, [
                  ['Subscriber', 'subscriber'],
                  ['Lead', 'lead'],
                  ['Marketing Qualified Lead', 'marketing_qualified_lead'],
                  ['Sales Qualified Lead', 'sales_qualified_lead'],
                  ['Opportunity', 'opportunity'],
                  ['Customer', 'customer'],
                  ['Evangelist', 'evangelist'],
                  ['Other', 'other']
                ], {}, { class: "input-field" } %>
          </div>
          
          <div>
            <%= form.label :source, "Source", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.select :source, [
                  ['Website', 'website'],
                  ['Referral', 'referral'],
                  ['Social Media', 'social_media'],
                  ['Email Campaign', 'email_campaign'],
                  ['Trade Show', 'trade_show'],
                  ['Cold Call', 'cold_call'],
                  ['Advertisement', 'advertisement'],
                  ['Partner', 'partner'],
                  ['Other', 'other']
                ], { include_blank: 'Select source...' }, { class: "input-field" } %>
          </div>
        </div>
      </div>

      <!-- Address Information -->
      <div>
        <h3 class="text-lg font-semibold text-heading mb-4">Address Information</h3>
        <div class="space-y-4">
          <div>
            <%= form.label :address, "Street Address", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.text_field :address, class: "input-field" %>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <%= form.label :city, "City", class: "block text-sm font-medium text-heading mb-1" %>
              <%= form.text_field :city, class: "input-field" %>
            </div>
            
            <div>
              <%= form.label :state, "State/Province", class: "block text-sm font-medium text-heading mb-1" %>
              <%= form.text_field :state, class: "input-field" %>
            </div>
            
            <div>
              <%= form.label :postal_code, "Postal Code", class: "block text-sm font-medium text-heading mb-1" %>
              <%= form.text_field :postal_code, class: "input-field" %>
            </div>
          </div>
          
          <div>
            <%= form.label :country, "Country", class: "block text-sm font-medium text-heading mb-1" %>
            <%= form.text_field :country, class: "input-field" %>
          </div>
        </div>
      </div>

      <!-- Additional Information -->
      <div>
        <h3 class="text-lg font-semibold text-heading mb-4">Additional Information</h3>
        <div>
          <%= form.label :description, "Description", class: "block text-sm font-medium text-heading mb-1" %>
          <%= form.text_area :description, rows: 4, class: "input-field", 
                placeholder: "Add any additional notes or information about this contact..." %>
        </div>
      </div>

      <!-- Contact Statistics (Read-only) -->
      <div>
        <h3 class="text-lg font-semibold text-heading mb-4">Contact Statistics</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-surface-secondary p-4 rounded-lg">
            <div class="text-sm text-text-secondary">Contact Score</div>
            <div class="text-2xl font-bold text-heading"><%= @contact.contact_score %>/100</div>
          </div>
          <div class="bg-surface-secondary p-4 rounded-lg">
            <div class="text-sm text-text-secondary">Total Deal Value</div>
            <div class="text-2xl font-bold text-success">$<%= number_with_delimiter(@contact.total_deal_value) %></div>
          </div>
          <div class="bg-surface-secondary p-4 rounded-lg">
            <div class="text-sm text-text-secondary">Active Deals</div>
            <div class="text-2xl font-bold text-info"><%= @contact.active_deals_count %></div>
          </div>
        </div>
      </div>

      <!-- Audit Information -->
      <div class="bg-surface-secondary p-4 rounded-lg">
        <h4 class="font-medium text-heading mb-2">Contact History</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-text-secondary">
          <div>
            <strong>Created:</strong> <%= @contact.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
          <div>
            <strong>Last Updated:</strong> <%= @contact.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
          <% if @contact.lead %>
            <div class="md:col-span-2">
              <strong>Converted from Lead:</strong> 
              <%= link_to @contact.lead.display_name, crm_lead_path(@contact.lead), class: "text-primary hover:underline" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-end space-x-4 pt-6 border-t border-border">
        <%= link_to crm_contact_path(@contact), class: "btn-secondary" do %>
          Cancel
        <% end %>
        <%= form.submit "Update Contact", class: "btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="card p-6 mt-6">
    <h3 class="text-lg font-semibold text-heading mb-4">Quick Actions</h3>
    <div class="flex flex-wrap gap-3">
      <%= link_to crm_contact_path(@contact), class: "btn-secondary" do %>
        <i class="icon-eye mr-2"></i>
        View Contact
      <% end %>
      
      <%= link_to crm_contacts_path, class: "btn-accent" do %>
        <i class="icon-users mr-2"></i>
        All Contacts
      <% end %>
      
      <%= link_to crm_contact_path(@contact), method: :delete, 
            class: "btn-danger", 
            data: { confirm: "Are you sure you want to delete this contact? This action cannot be undone." } do %>
        <i class="icon-trash mr-2"></i>
        Delete Contact
      <% end %>
    </div>
  </div>

  <!-- Activity Summary -->
  <% if @contact.activities.any? %>
    <div class="card p-6 mt-6">
      <h3 class="text-lg font-semibold text-heading mb-4">Recent Activity Summary</h3>
      <div class="space-y-3">
        <% @contact.activities.order(activity_date: :desc).limit(3).each do |activity| %>
          <div class="flex items-center justify-between p-3 bg-surface-secondary rounded-lg">
            <div>
              <div class="font-medium text-heading"><%= activity.subject %></div>
              <div class="text-sm text-text-secondary">
                <%= activity.activity_type.humanize %> â€¢ <%= time_ago_in_words(activity.activity_date) %> ago
              </div>
            </div>
            <div class="text-sm text-text-secondary">
              by <%= activity.user&.email %>
            </div>
          </div>
        <% end %>
        <% if @contact.activities.count > 3 %>
          <div class="text-center">
            <%= link_to crm_contact_path(@contact), class: "text-primary hover:underline text-sm" do %>
              View all <%= @contact.activities.count %> activities â†’
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>